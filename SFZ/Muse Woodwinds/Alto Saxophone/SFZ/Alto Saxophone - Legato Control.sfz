// StaffPad Pro
// Alto Saxophone
// Legato Master Control

///////////////////
//Standard Legato//
///////////////////
	
<include>
legato_phase=sustain
preroll_time=0.2
postroll_time=1.5
relative_fade_time=100
fade_out_function=power-sinusoidal
fade_in_function=linear
file=Alto Saxophone - Sustain.sfz

<include>
legato_phase=interval
legato_minimum_duration=0.1
preroll_time=0.2
postroll_time=1.5
relative_fade_time=100
fade_out_function=power-sinusoidal
fade_in_function=linear
file=Alto Saxophone - Legato Intervals.sfz

///////////////
//Fast Legato//
///////////////
	
<include>
legato_phase=interval
legato_maximum_duration=0.1
preroll_time=0.125
postroll_time=0.125
relative_fade_time=50
fade_out_function=power-sinusoidal
fade_in_function=linear
file=Alto Saxophone - Legato Intervals Fast.sfz